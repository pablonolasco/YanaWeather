<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MinutelyWatherActivity"
    android:background="@drawable/bg_gradiient_blue"
    >
    <TextView
        style="@style/textFont"
        android:id="@+id/tv_minutely_wetaher_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="@string/minutely_forescat" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_minutely"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:layout_below="@id/tv_minutely_wetaher_tittle"
        >

    </android.support.v7.widget.RecyclerView>
    <TextView
        style="@style/textFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/tv_message_data_minutely"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:text="@string/message_sin_datos" />

</RelativeLayout>