<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.DailyWeatherActivity"
    android:background="@drawable/bg_gradiient_blue"
    >

    <TextView
        style="@style/textFont"
        android:id="@+id/tv_delay_wetaher_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:text="@string/dayli_forescat" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_delay_wetaher_tittle"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:padding="5dp"
        />
<TextView
    style="@style/textFont"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:id="@android:id/empty"
    android:layout_centerInParent="true"
    android:text="@string/message_sin_datos" />

</RelativeLayout>